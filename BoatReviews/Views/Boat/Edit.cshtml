@model BoatReviews.Models.Boat
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>

    <h4>Boat</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="ImageLocation" class="control-label"></label>
                    <input asp-for="ImageLocation" class="form-control" />
                    <span asp-validation-for="ImageLocation" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ReviewContent" class="control-label"></label>
                    <input asp-for="ReviewContent" class="form-control" />
                    <span asp-validation-for="ReviewContent" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CategoryId" class="control-label"></label>
                    @*<select asp-for="CategoryId" class="form-control"></select>*@
                    @*<input asp-for="CategoryId" class="form-control" />*@
                    @*@if(@Catery)*@
                    <input asp-for="CategoryId" type="radio" name="categoryId" value="1"> Motorboat<br>
                    <input asp-for="CategoryId" type="radio" name="categoryId" value="2"> Sailboat<br>
                    <input asp-for="CategoryId" type="radio" name="categoryId" value="3"> Human Powered Boat<br>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

</body>
</html>
